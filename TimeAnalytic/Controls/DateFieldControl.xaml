<UserControl x:Class="TimeAnalytic.Controls.DateFieldControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:TimeAnalytic.Controls" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition  />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
        </Grid.ColumnDefinitions>
        <StackPanel >
            <controls:BaseFieldControl  HorizontalAlignment="Left" />
            <StackPanel Orientation="Horizontal">
                <Label VerticalAlignment="Center" Grid.Row="1">Date Recognize Pattern</Label>
                <TextBox Text="{Binding Path=DateFormat}" Margin="2" Width="62" VerticalContentAlignment="Center"></TextBox>
            </StackPanel>
        </StackPanel>


    </Grid>
</UserControl>
